---
const items = [
  {
    title: "Home",
    path: "/",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "About",
    path: "/about",
  },
];
---

<div class="flex bg-gray-400 text-white items-center">
  <div class="font-bold text-lg ml-4">JANPOL</div>

  <div class="ml-auto">
    <ul class="flex">
      {
        items.map((item) => (
          <li>
            <a
              class="p-4 block hover:text-red-400 transition-all"
              href={item.path}
            >
              {item.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
