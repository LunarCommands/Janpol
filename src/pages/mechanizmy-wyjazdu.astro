---
import Base from "@layouts/Base.astro";
import { getCollection } from "astro:content";

const furniturePosts = await getCollection("mechanizmy-wyjazdu");
---

<Base title="Mechanizmy Wyjazdu">
  <div class="container flex my-12 mx-auto px-4 md:px-12 lg:w-1/3">
    <div class="-mx-1 flex-1 lg:-mx-4">
      <div class="overflow rounded-lg shadow-lg">
        {
          furniturePosts.map((post) => (
            <div class="block h-auto w-full">
              <a href="#">
                <img
                  class="block h-auto w-full"
                  src={post.data.images[0].src}
                />
              </a>
              <div class="p-5">
                <a href="#">
                  <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 ">
                    {post.data.title}
                  </h5>
                </a>
                <p class="mb-3 font-normal text-gray-700 ">
                  {post.data.description}
                </p>
                <a
                  href="#"
                  class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-gradient-to-r from-gray-300 via-gray-400 to-gray-500 rounded-lg hover:from-gray-400 hover:to-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 "
                >
                  WiÄ™cej
                  <svg
                    aria-hidden="true"
                    class="w-4 h-4 ml-2 -mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Base>
