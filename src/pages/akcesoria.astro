---
import Base from "@layouts/Base.astro";
import { getCollection } from "astro:content";

const furniturePosts = await getCollection("akcesoria");
---

<Base title="Akcesoria">
  <h1
    class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-500 py-12"
  >
    Akcesoria
  </h1>
  <div class="container my-12 mx-auto px-4 md:px-12">
    <div class="flex flex-wrap -mx-1 lg:-mx-4">
      {
        furniturePosts.map((post) => (
          <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3 overflow-hidden rounded-lg shadow-lg flex flex-col justify-between animate-fade-in">
            <a href={"/akcesoria/" + post.slug}>
              <img
                class="block h-full w-full object-cover object-center"
                src={post.data.images[0].src}
              />
            </a>
            <div class="p-5 flex-1">
              <a href={"/akcesoria/" + post.slug}>
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 ">
                  {post.data.title}
                </h5>
              </a>
            </div>
            <a
              href={"/akcesoria/" + post.slug}
              class="inline-flex my-2 items-center px-3 py-2 text-sm font-medium text-center text-white bg-gradient-to-r from-gray-500 via-gray-400 to-gray-300 rounded-lg hover:from-gray-400 hover:to-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 "
            >
              WiÄ™cej
              <svg
                aria-hidden="true"
                class="w-4 h-4 ml-2 -mr-1"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Base>
<style>
  .animate-fade-in {
    animation-name: fade-in;
    animation-duration: 0.5s;
    animation-delay: 0s;
    animation-fill-mode: both;
    opacity: 0;
  }

  .animate-fade-in:nth-child(1) {
    animation-delay: 0s;
  }
  .animate-fade-in:nth-child(2) {
    animation-delay: 0.2s;
  }
  .animate-fade-in:nth-child(3) {
    animation-delay: 0.4s;
  }
  .animate-fade-in:nth-child(4) {
    animation-delay: 0.6s;
  }
  .animate-fade-in:nth-child(5) {
    animation-delay: 0.8s;
  }
  .animate-fade-in:nth-child(6) {
    animation-delay: 1s;
  }
  .animate-fade-in:nth-child(7) {
    animation-delay: 1.2s;
  }
  .animate-fade-in:nth-child(8) {
    animation-delay: 1.4s;
  }
  .animate-fade-in:nth-child(9) {
    animation-delay: 1.6s;
  }
  .animate-fade-in:nth-child(10) {
    animation-delay: 1.8s;
  }
  .animate-fade-in:nth-child(11) {
    animation-delay: 2s;
  }
  .animate-fade-in:nth-child(12) {
    animation-delay: 2.2s;
  }
  .animate-fade-in:nth-child(13) {
    animation-delay: 2.4s;
  }
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
