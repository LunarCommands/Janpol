---
import Base from "@layouts/Base.astro";
---

<Base title="Ramki">
  <h1
    class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-500 py-12"
  >
    Ramki
  </h1>
  <div
    class="container my-12 mx-auto px-4 md:px-12 flex flex-wrap justify-between py-36"
  >
    <div
      class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3 overflow-hidden rounded-lg shadow-lg animate-fade-in"
    >
      <img
        class="block h-full w-full object-cover object-center"
        src="/ramki/frame-01.png"
        alt="frame-01"
      />
    </div>
    <div
      class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3 overflow-hidden rounded-lg shadow-lg animate-fade-in"
    >
      <img
        class="block h-full w-full object-cover object-center"
        src="/ramki/frame-02.png"
        alt="frame-02"
      />
    </div>
    <div
      class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3 overflow-hidden rounded-lg shadow-lg animate-fade-in"
    >
      <img
        class="block h-full w-full object-cover object-center"
        src="/ramki/frame-03.png"
        alt="frame-03"
      />
    </div>
  </div>
</Base>
<style>
  .animate-fade-in {
    animation-name: fade-in;
    animation-duration: 0.5s;
    animation-delay: 0s;
    animation-fill-mode: both;
    opacity: 0;
  }

  .animate-fade-in:nth-child(1) {
    animation-delay: 0s;
  }
  .animate-fade-in:nth-child(2) {
    animation-delay: 0.2s;
  }
  .animate-fade-in:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
