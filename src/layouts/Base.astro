---
import Navbar from "@components/Navbar.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{title} / Janpol</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Regular.woff2") format("woff2");
        font-display: swap;
        font-weight: 400;
      }
      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Italic.woff2") format("woff2");
        font-display: swap;
        font-weight: 400;
        font-style: italic;
      }
      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Bold.woff2") format("woff2");
        font-display: swap;
        font-weight: 700;
      }
    </style>
  </head>
  <body class="bg-gray-300">
    <Navbar />
    <div class="mt-16 text-center">
      <slot />
    </div>

    <footer class="p-4 bg-gray-600 rounded-lg shadow md:px-6 md:py-8">
      <div class="sm:flex sm:items-center sm:justify-between">
        <a href="https://flowbite.com/" class="flex items-center mb-4 sm:mb-0">
          <img
            src="https://flowbite.com/docs/images/logo.svg"
            class="h-8 mr-3"
            alt="Flowbite Logo"
          />
          <span
            class="self-center text-2xl font-semibold whitespace-nowrap text-white"
            >Janpol</span
          >
        </a>
        <ul class="flex flex-wrap items-center mb-6 text-sm sm:mb-0 text-white">
          <li>
            <a href="#" class="mr-4 hover:underline md:mr-6">O nas</a>
          </li>
          <li>
            <a href="#" class="mr-4 hover:underline md:mr-6">Realizacje</a>
          </li>
          <li>
            <a href="#" class="mr-4 hover:underline md:mr-6">Park maszynowy</a>
          </li>
          <li>
            <a href="#" class="hover:underline">Kontakt</a>
          </li>
        </ul>
      </div>
      <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8" />
      <span class="block text-sm text-white sm:text-center dark:text-gray-400"
        ><a href="https://flowbite.com/" class="hover:underline">Janpolâ„¢</a>.
      </span>
    </footer>
  </body>
  <script
    is:inline
    src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.3/flowbite.min.js"
  ></script>
</html>
