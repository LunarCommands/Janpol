---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Regular.woff2") format("woff2");
        font-display: swap;
        font-weight: 400;
      }
      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Italic.woff2") format("woff2");
        font-display: swap;
        font-weight: 400;
        font-style: italic;
      }
      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Bold.woff2") format("woff2");
        font-display: swap;
        font-weight: 700;
      }
    </style>
  </head>
  <body class="bg-slate-50">
    <div class="max-w-2xl mx-auto">
      <nav class="border-gray-200 flex justify-between items-center">
        <div class="flex items-center flex-grow">
          <a href="/">
            <img
              src="/public/Janpol-logo.png"
              alt="janpol logo"
              class="h-auto my-3 mr-12 pl-5"
              width="100"
              height="30"
            />
          </a>
        </div>
        <div class="flex-shrink-0">
          <button
            data-collapse-toggle="mobile-menu"
            type="button"
            class="md:hidden m-3 text-gray-400 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-300 rounded-lg inline-flex items-center justify-center absolute top-0 right-0"
            aria-controls="mobile-menu-2"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                clip-rule="evenodd"></path></svg
            >
            <svg
              class="hidden w-6 h-6"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"></path></svg
            >
          </button>
          <div class="hidden md:block w-full md:w-auto" id="mobile-menu">
            <ul
              class="flex flex-col p-4 mt-4 border border-gray-100 rounded-lg md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 sm:bg-transparent"
            >
              <li>
                <button
                  id="dropdownNavbarLink"
                  data-dropdown-toggle="dropdownNavbar"
                  class="text-gray-700 bg-slate-50 hover:bg-gray-200 border-b border-gray-100 md:hover:bg-transparent md:border-0 pl-3 pr-4 py-2 md:hover:text-blue-700 md:p-0 font-medium flex items-center justify-between w-full md:w-auto"
                  >Akcesoria Meblowe <svg
                    class="w-4 h-4 ml-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                      fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path></svg
                  ></button
                >
                <!-- Dropdown menu -->
                <div
                  id="dropdownNavbar"
                  class="hidden bg-white text-base z-10 list-none divide-y divide-gray-100 rounded shadow my-4 w-44"
                >
                  <ul class="py-1" aria-labelledby="dropdownLargeButton">
                    <li>
                      <a
                        href="/mechanizmy-wyjazdu"
                        class="text-sm hover:bg-gray-200 text-gray-700 block px-4 py-2"
                        >Mechanizmy wyjazdu</a
                      >
                    </li>
                    <li>
                      <a
                        href="/nogi"
                        class="text-sm hover:bg-gray-200 text-gray-700 block px-4 py-2"
                        >Nogi</a
                      >
                    </li>
                    <li>
                      <a
                        href="/podnosniki"
                        class="text-sm hover:bg-gray-200 text-gray-700 block px-4 py-2"
                        >Podno≈õniki</a
                      >
                    </li>
                    <li>
                      <a
                        href="/ramki"
                        class="text-sm hover:bg-gray-200 text-gray-700 block px-4 py-2"
                        >Ramki</a
                      >
                    </li>
                    <li>
                      <a
                        href="/akcesoria"
                        class="text-sm hover:bg-gray-200 text-gray-700 block px-4 py-2"
                        >Akcesoria</a
                      >
                    </li>
                  </ul>
                </div>
              </li>
              <li>
                <a
                  href="/park-maszynowy"
                  class="text-gray-700 bg-slate-50 hover:bg-gray-200 border-b border-gray-100 md:hover:bg-transparent md:border-0 block pl-3 pr-4 py-2 md:hover:text-blue-700 md:p-0"
                  >Park Maszynowy
                </a>
              </li>
              <li>
                <a
                  href="/realizacje"
                  class="text-gray-700 bg-slate-50 hover:bg-gray-200 border-b border-gray-100 md:hover:bg-transparent md:border-0 block pl-3 pr-4 py-2 md:hover:text-blue-700 md:p-0"
                  >Realizacje</a
                >
              </li>
              <li>
                <a
                  href="/o-nas"
                  class="text-gray-700 bg-slate-50 hover:bg-gray-200 border-b border-gray-100 md:hover:bg-transparent md:border-0 block pl-3 pr-4 py-2 md:hover:text-blue-700 md:p-0"
                  >O nas</a
                >
              </li>
              <li>
                <a
                  href="/kontakt"
                  class="text-gray-700 bg-slate-50 hover:bg-gray-200 border-b border-gray-100 md:hover:bg-transparent md:border-0 block pl-3 pr-4 py-2 md:hover:text-blue-700 md:p-0"
                  >Kontakt</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div>
      <slot />
    </div>
  </body>
  <footer class="p-4 shadow md:px-6 md:py-8">
    <div
      class="flex flex-col md:flex-row items-center justify-center md:justify-between"
    >
      <a href="/" class="flex items-center mb-4 sm:mb-0">
        <img
          src="/Janpol-logo.png"
          class="h-auto sm:mx-auto"
          alt="Janpol Logo"
          width="100"
          height="30"
        />
      </a>
      <ul
        class="flex flex-wrap items-center mb-6 text-sm sm:mb-0 text-gray-500"
      >
        <li>
          <a href="o-nas" class="mr-4 hover:underline md:mr-6">O nas</a>
        </li>
        <li>
          <a href="realizacje" class="mr-4 hover:underline md:mr-6"
            >Realizacje</a
          >
        </li>
        <li>
          <a href="park-maszynowy" class="mr-4 hover:underline md:mr-6"
            >Park maszynowy</a
          >
        </li>
        <li>
          <a href="kontakt" class="hover:underline">Kontakt</a>
        </li>
      </ul>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8" />
    <span class="block text-sm text-gray-500 text-center dark:text-gray-400"
      ><a
        href="https://lunarcommands.github.io/"
        target="blank"
        class="hover:underline">Created by Lunar Commands</a
      >.
    </span>
  </footer>
</html>

<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.3/flowbite.min.js"
></script>
